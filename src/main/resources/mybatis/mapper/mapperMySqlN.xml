<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
 * @author SG Lee
 * @since 2013
 * @description
 * general purpose mapper
-->

<mapper namespace="org.chronotics.db.mybatis.MapperMySqlN">

    <!--
        Please note the difference between using #{} and ${}.
        Hashtags sign means a prepared statement variables, while dollar sign means a simple string replace.
        like pair and sigle value
    -->

    <select id="selectOne" parameterType="map" resultType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                <foreach index="index" item="item" collection="item" open="" separator="" close="">
                    #{item}
                </foreach>
            </foreach>
        </if>
    </select>

    <select id="selectList" parameterType="map" resultType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                SELECT * FROM USER
                <!--<foreach index="index" item="item" collection="item" open="" separator="" close="">-->
                    <!--${item}-->
                <!--</foreach>-->
            </foreach>
        </if>
    </select>

    <insert id="insert" parameterType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                <foreach index="index" item="item" collection="item" open="" separator="" close="">
                    #{item}
                </foreach>
            </foreach>
        </if>
    </insert>

    <update id="update" parameterType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                <foreach index="index" item="item" collection="item" open="" separator="" close="">
                    #{item}
                </foreach>
            </foreach>
        </if>
    </update>

    <delete id="delete" parameterType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                <foreach index="index" item="item" collection="item" open="" separator="" close="">
                    #{item}
                </foreach>
            </foreach>
        </if>
    </delete>

    <insert id="insertMultipleItems" parameterType="map">
        <if test="STATEMENT != null">
            <foreach index="key" item="item" collection="STATEMENT" open="" separator="" close="">
                <foreach index="index" item="item" collection="item" open="" separator="" close="">
                    #{item}
                </foreach>
            </foreach>
        </if>
    </insert>

</mapper>